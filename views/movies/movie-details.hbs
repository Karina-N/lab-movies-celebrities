<div class="content-box details">
  <h2>{{movie.title}}</h2>

  <div>
    <p>{{movie.genre}}</p>
    <p>{{movie.plot}}</p>

    <h5 class="headline-middle">CAST:</h5>
    {{#each movie.cast}}
      <h4>{{this.name}}</h4>
      <p>{{this.occupation}}</p>
      <p>{{this.catchPhrase}}</p>
    {{/each}}
  </div>

  <div class="buttons-box">
    <a href="/movies/{{movie._id}}/edit">EDIT</a>

    <form action="/movies/{{movie._id}}/delete" method="POST">
      <button>DELETE</button>
    </form>
  </div>
</div>